        <li class="Section">
            <h2 class="Section-title h2">{{ 'index.sections.about.title'|trans }}</h2>
        </li>
        <li class="Section">
            <h2 class="Section-title h2">{{ 'index.sections.experience.title'|trans }}</h2>
        </li>
        <li class="Section">
            <h2 class="Section-title h2">{{ 'index.sections.projects.title'|trans }}</h2>
        </li>
        <li class="Section">
